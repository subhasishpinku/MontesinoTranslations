<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_credit_debit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        card_view:cardElevation="5dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/check_layout">
                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/select_box"
                    android:layout_margin="@dimen/_5sdp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@+id/check_layout"
                android:id="@+id/tv_credit_title"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginBottom="@dimen/_minus10sdp"
                android:textSize="@dimen/_15sdp"
                android:text="Credit Card A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_below="@+id/tv_credit_title"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="Test Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>


