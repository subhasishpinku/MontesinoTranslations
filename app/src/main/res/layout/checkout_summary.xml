<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/border"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle"
        android:layout_margin="@dimen/_5sdp"/>
    <TextView
        android:layout_below="@+id/border"
        android:id="@+id/checkOutId"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="@string/checkout_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
       <View
           android:id="@+id/viId"
           android:layout_below="@+id/checkOutId"
           android:layout_centerHorizontal="true"
           android:background="@color/red"
           android:layout_width="match_parent"
           android:layout_marginStart="@dimen/_180sdp"
           android:layout_height="@dimen/_1sdp"/>
    <TextView
        android:id="@+id/tranId"
        android:layout_below="@+id/viId"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textColor="@color/choice_divider"
        android:textSize="@dimen/_16sdp"
        android:text="@string/transaction_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/amountId"
        android:layout_below="@+id/tranId"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/red"
        android:textSize="@dimen/_20sdp"
        android:text="$25.95"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/visId"
        android:layout_below="@+id/amountId"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:background="@color/choice_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
    <RelativeLayout
        android:layout_below="@+id/visId"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/totalId"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:text="@string/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/totalAmount"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_18sdp"
            android:text="$25.95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/discountId"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/totalId"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:text="@string/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/discountTotal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/totalId"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:text="$25.95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/expediteChargeId"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/discountId"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:text="@string/expedite_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/expediteChargeAmount"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/discountTotal"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:text="$25.95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>