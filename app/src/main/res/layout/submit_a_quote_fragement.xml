<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@null"
        android:id="@+id/sectionScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rv_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_below="@+id/top_layout">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/form_layout"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">
                <!--Quote FORM-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/_10sdp"
                    android:orientation="vertical">
                        <!--First Name-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/firstName"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_quote_user_ico"
                                android:drawablePadding="12dp"
                                android:singleLine="true"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:inputType="textEmailAddress"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <!--Last Name-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/lastName"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_quote_user_ico"
                                android:drawablePadding="12dp"
                                android:singleLine="true"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:inputType="textEmailAddress"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <!--Email Address-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email_add"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/email_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_quote_email_ico"
                                android:drawablePadding="12dp"
                                android:singleLine="true"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:inputType="textEmailAddress"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <!--Phone Number-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/contact_number"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/phoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_quote_phone_ico"
                                android:drawablePadding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <!--Custom Instruction-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/custom_instruction"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/custom_instruction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_5sdp"
                                android:ems="10"
                                android:lines="4"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_instructions_text_1"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/instruction_box"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/quote_instruction_text"
                            android:fontFamily="@font/poppins_regular"/>
                        <!--Custom Instruction-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:hint="@string/translateTto"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/translate_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_translate"
                                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                                android:drawablePadding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/translate_to_text"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/language_box"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/quote_language_text"
                            android:fontFamily="@font/poppins_regular"/>
                        <!--Upload File-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/upload_file"
                            android:textColorHint="@color/text_background"
                            app:hintTextColor="@color/text_background"
                            app:boxStrokeColor="@color/text_background"
                            app:boxCornerRadiusTopStart="@dimen/_25sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/upload_file"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/request_quote_upload_ico"
                                android:drawablePadding="@dimen/_5sdp"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:inputType="phone"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/uploadFileList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/form_layout" />

                        <TextView
                            android:id="@+id/disclaimer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/translate_to_text"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/language_box"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/quote_language_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_below="@+id/uploadFileList"/>

                </LinearLayout>
                <!--SIGNUP FORM-->
                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/choice_circle_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:id="@+id/login"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/verifyText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageLogos"
            android:layout_width="match_parent"
            android:background="@drawable/header_shape_top"
            android:layout_height="@dimen/_50sdp"/>


    </RelativeLayout>
</RelativeLayout>