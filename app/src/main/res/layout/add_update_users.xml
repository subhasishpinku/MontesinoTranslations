<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:id="@+id/border"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle"
            android:layout_margin="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:id="@+id/heading"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_user"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/card_label"
                android:textSize="@dimen/_16sdp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/form_design_layout"
            android:layout_below="@+id/heading">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_name"
                android:textColorHint="@color/text_background"
                app:hintTextColor="@color/text_background"
                app:boxStrokeColor="@color/text_background"
                app:boxCornerRadiusTopStart="@dimen/_25sdp"
                app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/request_quote_user_ico"
                    android:drawablePadding="12dp"
                    android:singleLine="true"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_id"
                android:textColorHint="@color/text_background"
                app:hintTextColor="@color/text_background"
                app:boxStrokeColor="@color/text_background"
                app:boxCornerRadiusTopStart="@dimen/_25sdp"
                app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email_ico_alt"
                    android:drawablePadding="12dp"
                    android:singleLine="true"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contact_number"
                android:textColorHint="@color/text_background"
                app:hintTextColor="@color/text_background"
                app:boxStrokeColor="@color/text_background"
                app:boxCornerRadiusTopStart="@dimen/_25sdp"
                app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/request_quote_phone_ico"
                    android:drawablePadding="12dp"
                    android:singleLine="true"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passBody"
                android:layout_gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/passwords"
                    android:textColorHint="@color/text_background"
                    app:hintTextColor="@color/text_background"
                    app:boxStrokeColor="@color/text_background"
                    app:boxCornerRadiusTopStart="@dimen/_25sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/email_ico_alt"
                        android:drawablePadding="12dp"
                        android:singleLine="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eye_btn"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:onClick="show_pass"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/user_add_pass_eye_close"
                        tools:ignore="OnClick" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passBodyCnf"
                android:layout_gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_passwords"
                    android:textColorHint="@color/text_background"
                    app:hintTextColor="@color/text_background"
                    app:boxStrokeColor="@color/text_background"
                    app:boxCornerRadiusTopStart="@dimen/_25sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_25sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_25sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/cnfPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/email_ico_alt"
                        android:drawablePadding="12dp"
                        android:singleLine="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:inputType="textEmailAddress"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eye_btn_cnf"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:onClick="show_pass"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/user_add_pass_eye_close"
                        tools:ignore="OnClick" />

                </LinearLayout>

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/admin"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        android:textColor="@color/text_background"
                        android:id="@+id/admin"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_gravity="center"/>


                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/make_admin"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:checked="false"
                        android:theme="@style/SCBSwitch"
                        android:layout_marginTop="@dimen/_10sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/staff"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        android:textColor="@color/text_background"
                        android:id="@+id/staff"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_gravity="center"/>


                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/make_staff"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="0.7"
                        android:checked="true"
                        android:theme="@style/SCBSwitch"
                        android:layout_marginTop="@dimen/_10sdp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/form_design_layout"
            android:gravity="center"
            android:layout_margin="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:background="@drawable/cancel_card"
                android:gravity="center"
                android:id="@+id/cancelUser"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancelCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/card_cancel_button"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:id="@+id/saveUser"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/saveCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/card_save_button"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>