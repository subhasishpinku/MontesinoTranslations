<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background">
    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageLogos"
            android:layout_width="match_parent"
            android:background="@drawable/header_shape_top"
            android:layout_height="@dimen/_50sdp"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fullNameId"
        android:layout_below="@+id/rv"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/full_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullNameIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailId"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/fullNameId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/email_id">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneId"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/emailId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/phone">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/companyID"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/phoneId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/company_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/companyIDs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/accountId"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/companyID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/account_number">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/accountIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:textColor="@color/black"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rewardAmountId"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/accountId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/text_background"
        app:hintTextColor="@color/text_background"
        app:boxStrokeColor="@color/text_background"
        app:boxCornerRadiusTopStart="@dimen/_25sdp"
        app:boxCornerRadiusTopEnd="@dimen/_25sdp"
        app:boxCornerRadiusBottomStart="@dimen/_25sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="@string/reward_amount">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rewardAmountIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_edit_acc"
            android:orientation="vertical"
            android:background="@drawable/edit_btn_bg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/baseline_edit_24"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:id="@+id/btn_submit"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/verifyText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>